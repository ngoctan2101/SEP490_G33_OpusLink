@page
@model OpusLink.User.Hosted.Pages.WithDrawMoney.WithDrawMoneyRequestModel
@{
    var erorr = HttpContext!.Session.GetString("_error") ?? string.Empty;

}

<style>
   

    .container_ruttien {
        margin-top: 20px;
        background-color: #fff;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    
        width: 100%;
