@page
@model OpusLink.User.Hosted.Pages.HistoryPayment.HistoryPaymentDetailModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>History Payment Detail</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center mb-4">View invoice</h1>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Payment Details</h5>
                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">Mã giao dịch</th>
                                    <th scope="col">Ngày Giao dịch</th>
                                    <th scope="col">Amount</th>
                                    <th scope="col">Loại giao dịch</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>@Model.his.TransactionCode</td>
                                    <td>@Model.his.TransactionDate</td>
                                    <td>@Model.his.Amount</td>
                                    @if(Model.his.TransactionType == 1){
                                        <td>Nạp tiền</td>
                                    }
                                    else if (Model.his.TransactionType == 2)
                                    {
                                        <td>Rút tiền</td>
                                    }
                                    else if(Model.his.TransactionType ==3){
                                        <td>Đặt cọc tiền</td>
                                    }
                                    else if(Model.his.TransactionType ==4){
                                        <td>Tiền đăng bài</td>
                                    }
                                    else if(Model.his.TransactionType ==5){
                                        <td>Tiền nhận ở mỗi miston</td>
                                    }
                                    else if(Model.his.TransactionType ==6){
                                        <td>Tiền giữ 20%</td>
                                    }
                                    
                                </tr>
                                <!-- You can add more rows dynamically with data -->
                            </tbody>
                        </table>
                        <a href="/HistoryPayment/HistoryPayment?UserId=@Model.his.UserID" class="btn btn-primary">Back to History</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.min.js"></script>
</body>
</html>
