@page
@model OpusLink.User.Hosted.Pages.Account.RegisterModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng ký - Opuslink</title>
    <link rel="stylesheet" href="~/css/Account.css">
    <script src="https://kit.fontawesome.com/10f63c3d6e.js" crossorigin="anonymous"></script>
    <style>
        .input-container {
            position: relative;
        }

            .input-container input[type="date"] {
                padding-right: 30px;
                height: 50px;
            }

            .input-container .icon-calendar {
                position: absolute;
                right: 5px;
                top: 50%;
                transform: translateY(-50%);
                color: #888;
                font-size: 18px;
            }

    </style>
</head>

<!-- Script form -->
<script>
    function togglePasswordVisibility(inputId, iconId) {
        var passwordInput = document.getElementById(inputId);
        var icon = document.getElementById(iconId);

        if (passwordInput.type === "password") {
            passwordInput.type = "text";
            icon.classList.remove("fa-eye-slash");
            icon.classList.add("fa-eye");
        } else {
            passwordInput.type = "password";
            icon.classList.remove("fa-eye");
            icon.classList.add("fa-eye-slash");
        }
    }

    function checkPasswordLength() {
        var password = document.getElementById("Password").value;
        var errorElement = document.getElementById("passwordError");
        var hasLength = password.length >= 6;
        var hasSpecialChar = /[`!#$%^&*()_+\-=\@@[\]{};':"\\|,.<>\/?~]/.test(password);
        var hasNumber = /\d/.test(password);
        var hasUpperCase = /[A-Z]/.test(password);
        var hasLowerCase = /[a-z]/.test(password);

        if (!hasLength || !hasSpecialChar || !hasNumber || !hasUpperCase || !hasLowerCase) {
            errorElement.innerText = "Mật khẩu phải dài ít nhất 6 ký tự.\n" +
                "Mật khẩu phải chứa ký tự đặc biệt.\n" +
                "Mật khẩu phải chứa số.\n" +
                "Mật khẩu phải chứa chữ cái viết hoa và chữ cái viết thường.";
        } else {
            errorElement.innerText = "";
        }
        checkInputs();
    }

    function validatePasswords() {
        var password = document.getElementById("Password").value;
        var confirmPassword = document.getElementById("ConfirmPassword").value;
        var confirmPasswordError = document.getElementById("confirmPasswordError");

        if (password !== confirmPassword) {
            confirmPasswordError.innerText = "Nhập lại mật khẩu không khớp với mật khẩu";
        } else {
            confirmPasswordError.innerText = "";
        }
        checkInputs();
    }

    function checkUsername() {
        var usernameInput = document.getElementById("UserName");
        var username = usernameInput.value.trim();
        var errorElement = document.getElementById("usernameError");
        if (username.includes(" ")) {
            errorElement.innerText = "Tên đăng nhập không được chứa kí tự trắng";
        } else {
            errorElement.innerText = "";
        }
        checkInputs();
    }

    function checkInputs() {
        var allInputsFilled = true;
        var hasError = false;

        // Kiểm tra xem các ô input đã được điền hết và không có lỗi nào được báo
        var inputs = document.querySelectorAll('input:required');
        inputs.forEach(function (input) {
            if (!input.value || input.classList.contains('invalid')) {
                allInputsFilled = false;
            }
        });

        var errorMessages = document.querySelectorAll('.error-message');
        errorMessages.forEach(function (message) {
            if (message.innerText !== "") {
                hasError = true;
            }
        });

        // Tùy chỉnh thuộc tính disabled của nút đăng ký tài khoản
        var registerButton = document.getElementById("registerButton");
        registerButton.disabled = hasError || !allInputsFilled;

        // Tùy chỉnh lớp CSS của nút đăng ký tài khoản
        if (hasError || !allInputsFilled) {
            registerButton.classList.remove("active");
        } else {
            registerButton.classList.add("active");
        }
    }

    // Gọi hàm kiểm tra inputs khi trang tải xong và sau mỗi lần nhập hoặc thay đổi giá trị của inputs
    window.onload = function () {
        document.getElementById('UserName').value = '';
        document.getElementById('Email').value = '';
        document.getElementById('Password').value = '';
        document.getElementById('ConfirmPassword').value = '';
        document.getElementById('Birthdate').value = '';
        checkInputs();
    };
</script>

<body>
    <div class="wrapper container-fluid">
        <form method="post">
            <h1>Đăng ký</h1>

            <div class="input-box">
                <label class="label">Tên tài khoản <span style="color: red;">(*)</span></label>
                <input type="text" placeholder="Nhập tên đăng nhập" id="UserName" name="Username" required onchange="checkUsername()" oninput="checkInputs()">
                <i class="fa-solid fa-user"></i>
            </div>
            <div id="usernameError" class="alert alert-danger error-message"></div>

            <div class="input-box">
                <label class="label">Email <span style="color: red;">(*)</span></label>
                <input type="email" placeholder="Nhập email" id="Email" name="Email" required onblur="validateEmail()" oninput="checkInputs()">
                <i class="fa-solid fa-envelope"></i>
            </div>

            <div class="input-box">
                <label class="label">Ngày sinh của bạn <span style="color: red;">(*)</span></label>
                <div class="input-container">
                    <input type="date" placeholder="Nhập ngày/tháng/năm sinh của bạn" id="Birthdate" name="Birthdate" required oninput="checkInputs()">
                    <i class="icon-calendar"></i>
                </div>
            </div>


            <div class="input-box">
                <label class="label">Mật khẩu <span style="color: red;">(*)</span></label>
                <input type="password" placeholder="Nhập mật khẩu" id="Password" name="Password" required onchange="checkPasswordLength(); validatePasswords();" oninput="checkInputs()">
                <i class="fa-solid fa-eye-slash" id="eyeIcon" onclick="togglePasswordVisibility('Password', 'eyeIcon')"></i>
            </div>
            <div id="passwordError" class="alert alert-danger error-message"></div>

            <div class="input-box">
                <label class="label">Nhập lại mật khẩu <span style="color: red;">(*)</label>
                <input type="password" placeholder="Nhập lại mật khẩu" id="ConfirmPassword" name="ConfirmPassword" required onchange="validatePasswords()" oninput="checkInputs()">
                <i class="fa-solid fa-eye-slash" id="eyeIcon1" onclick="togglePasswordVisibility('ConfirmPassword', 'eyeIcon1')"></i>
            </div>
            <div id="confirmPasswordError" class="alert alert-danger error-message"></div>

            @if (ViewData["Success"] != null)
            {
                <div class="alert alert-success" role="alert">
                    @ViewData["Success"]
                </div>
            }
            @if (ViewData["Error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    @ViewData["Error"]
                </div>
            }

            <button id="registerButton" type="submit" class="btn-confirm" disabled>Đăng ký tài khoản</button>

            <div class="change-link">
                <p>Bạn đã có tài khoản rồi? <a asp-page="/Account/Login">Đăng nhập ngay!</a></p>
            </div>
        </form>
    </div>
</body>
</html>
