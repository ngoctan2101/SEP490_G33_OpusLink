@using System.Net.Http.Headers
@using System.Text.Json
@using Microsoft.AspNetCore.Http
@model OpusLink.User.Hosted.Pages.VnPayment.AddMoneyToWalletModel
@{
    ViewData["Title"] = "AddMoneyToWalletModel";

    var _client = new HttpClient();
    var contentType = new MediaTypeWithQualityHeaderValue("application/json");
    _client.DefaultRequestHeaders.Accept.Add(contentType);
    var ApiUri = $"https://localhost:7265/api/";
    var option = new JsonSerializerOptions
            {
                PropertyNameCaseInsensitive = true,
            };

    var erorr = HttpContext!.Session.GetString("_error") ?? string.Empty;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nạp Tiền</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
        }

        .container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            width: 400px;
            text-align: center;
        }

        .bottom-container {
            position: absolute;
            bottom: 20px;
            width: 100%;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2 class="mb-4">Nạp Tiền</h2>
        @if (!string.IsNullOrEmpty(erorr))
        {
            <p style="color:red;">@erorr</p>
        }
        <form id="topupForm" method="post">
            <div class="mb-3">
                <label for="username" class="form-label">Tên người dùng:</label>
                <input type="text" class="form-control" id="username" name="username" readonly required value="@Model.user.UserName">
            </div>

            <div class="mb-3">
                <label for="address" class="form-label">Địa chỉ:</label>
                <input type="text" class="form-control" id="address" name="address" readonly required value="@Model.user.Address">
            </div>

            <div class="mb-3">
                <label for="dob" class="form-label">Ngày sinh:</label>
                <input type="date" class="form-control" id="dob" name="dob" readonly required value="@Model.user.Dob">
            </div>

            <div class="mb-3">
                <label for="amount" class="form-label">Số tiền:</label>
                <input type="text" class="form-control" id="amount" name="amount" oninput="formatCurrency(this)" required value="@Model.Price" >
            </div>

            <a href="../Index" class="btn btn-secondary mt-3">
                <i class="bi bi-arrow-left"></i> Quay lại
            </a>

            <button type="submit" class="btn btn-success mt-3" >Nạp Tiền</button>
        </form>

        <div class="bottom-container">
            <!-- Chỗ này để đặt các phần tử ở gốc dưới của form -->
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function formatCurrency(input) {
            var value = input.value.replace(/[^\d]/g, '');
            var formattedValue = new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(value);
            input.value = formattedValue;
        }

        // function submitForm() {
