@page "skillID"
@model OpusLink.Admin.Hosted.Pages.ManageSkill.ViewsModel
@{
}
<body>

    <!-- Main Content -->
    <div class="container mt-5">
        <!-- Thanh tìm kiếm và nút "Add New" trong một thẻ div -->
        <div class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search by Name">
                    <button class="btn btn-outline-secondary" type="button">Search</button>
                </div>
            </div>
            <div>
                <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addSkillModal">Add New</button>
            </div>
        </div>

        <!-- Bảng kỹ năng -->
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">SkillParentID</th>
                    <th scope="col">Skill Name</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.listSkills != null)
                {
                    
                    <!-- Dữ liệu của bảng sẽ được thêm ở đây -->
                    @foreach (var item in Model.listSkills)
                    {
                        
                         @* var displaySkillName = string.IsNullOrEmpty((item.SkillParentID).ToString()) ? item.SkillName: $"{item.SkillName} ({item.SkillParentID})";
                        var displaySkillName1 = item.SkillParentID == item.SkillID 
                        ? displaySkillName
                        : $"{item.SkillName} ({item.SkillParentID})"; *@

                       <tr>
                            <th scope="row" name="@item.SkillID">@item.SkillID</th>
                            <td>
                                @if (item.SkillParentName != null )
                                {
                                    <p>@item.SkillParentName</p>
                                }
                                
                            </td>
                            <td>@item.SkillName</td>
                        <td>
                                <button class="btn btn-warning btn-sm" data-bs-toggle="modal" data-bs-target="#editSkillModal">Edit</button>
                                <button class="btn btn-danger btn-sm" onclick="confirmDelete(@item.SkillID)">Delete</button>
                        </td>
                        </tr>
                        <!-- Modal Edit -->
                        <div class="modal fade"  id="editSkillModal-@item.SkillID" tabindex="-1" aria-labelledby="editSkillModalLabel" aria-hidden="true">
                            <!-- Modal content goes here -->
                        </div>
                        <!-- Thêm các dòng khác nếu cần --> 
                    }
                }
                
            </tbody>
        </table>
    </div>

    <!-- Modal add new Skill -->
    <div class="modal fade" id="addSkillModal" tabindex="-1" aria-labelledby="addSkillModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addSkillModalLabel">Add New Skill</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <!-- Form thêm mới sẽ được thêm ở đây -->
                <form id="addSkillForm" method ="post">
                    <div class="mb-3">
                        <label for="skillParentID" class="form-label">SkillParentName</label>
                        <input type="text" class="form-control" id="skillParentID" name="SkillParentID" required>
                    </div>
                    <div class="mb-3">
                        <label for="skillName" class="form-label">Skill Name</label>
                        <input type="text" class="form-control" id="skillName" name="SkillName" required>
                    </div>
                    <!-- Thêm các trường khác nếu cần -->
                    <button type="submit" class="btn btn-primary" >Add Skill</button>
                </form>
            </div>
        </div>
    </div>
</div>


    <!-- Modal Edit -->
    <div class="modal fade" id="editSkillModal" tabindex="-1" aria-labelledby="editSkillModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="editSkillModalLabel">Edit Skill</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- Form chỉnh sửa sẽ được thêm ở đây -->
                    <form id="editSkillForm" method="post">
                        <input type="hidden" id="editSkillId" name="SkillID" /> <!-- Hidden input for SkillID -->

                        <div class="mb-3">
                            <label for="editSkillParentID" class="form-label">SkillParentID</label>
                            <input type="text" class="form-control" id="editSkillParentID" name="SkillParentID" required>
                        </div>
                        <div class="mb-3">
                            <label for="editSkillName" class="form-label">Skill Name</label>
                            <input type="text" class="form-control" id="editSkillName" name="SkillName" required>
                        </div>
                        <!-- Thêm các trường khác nếu cần -->
                        <button type="submit" class="btn btn-primary">Save Changes</button>
                    </form>
                </div>
            </div>
        </div>
    </div>



    <!-- Bootstrap JS và Popper.js (cần phải đặt sau thẻ body) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script>
        
            function confirmDelete(skillID) {
                var result = confirm("Are you sure you want to delete this skill?");
                if (result) {
                    // Thực hiện xóa nếu người dùng chọn "OK"
                    // Thêm mã xóa kỹ năng ở đây, truyền skillID về hàm deleteSkill
                    deleteSkill(skillID);
                } else {
                    // Hủy bỏ xóa nếu người dùng chọn "Cancel" (hoặc "No")
                }
            }

        function deleteSkill(skillID) {
            // Gửi yêu cầu xóa kỹ năng với skillID đến server
            // Ví dụ sử dụng AJAX
            $.ajax({
                url: 'api/Skill/DeleteSkillById/' + skillID, // Update the URL based on your controller and action
                type: 'POST', // You might use POST or DELETE depending on your server configuration
                success: function (result) {
                    // Xử lý kết quả sau khi xóa (cập nhật giao diện, thông báo, v.v.)
                    // Ví dụ: location.reload(); để làm mới trang sau khi xóa
                    location.reload();
                },
                error: function (error) {
                    console.error('Error deleting skill:', error);
                }
            });
        }
    
    </script>
</body>