@page
@model OpusLink.Admin.Hosted.Pages.ManagerWithDrawRequest.TransferMoneyModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chuyển Tiền</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* Tùy chỉnh CSS để căn giữa form và giữ kích thước tối đa là 500px */
        .custom-form-container {
            max-width: 500px;
            margin: 0 auto;
            margin-top: 100px; /* Khoảng cách từ trên xuống */
            background-color: #f9d3d3; /* Màu hồng nhạt cho nền */
            padding: 20px; /* Thêm lề để form không trực tiếp sát viền container */
            border-radius: 10px; /* Bo tròn góc của form */
        }
    </style>
</head>
<body>
    
    <div class="container custom-form-container">
        <!-- Thêm custom-form-container class -->
        <h1 class="mt-5">Chuyển Tiền</h1>
        <form method="post">
            <input hidden name="withdrawid" value="@Model.withdraw.WithdrawRequestID"/>
            <input hidden name="uid" value="@Model.withdraw.UserID" />
            <div class="mb-3">
                <label for="username" class="form-label">Người Nhận</label>
                <input type="text" class="form-control" id="username" name="username"  readonly required value="@Model.withdraw.UserName"/>
            </div>

            <div class="mb-3">
                <label for="bankacccountinfor" class="form-label">Số tài khoản ngân hàng</label>
                <input type="text" class="form-control" id="bankacccountinfor" name="bankacccountinfor" readonly required value="@Model.withdraw.BankAccountInfor">
            </div>

            <div class="mb-3">
                <label for="bankname" class="form-label">Tên ngân hàng</label>
                <input type="text" class="form-control" id="bankname" name="bankname" readonly required value="@Model.withdraw.BankName">
            </div>
            <div class="mb-3">
                <label for="bankname" class="form-label">Số tiền</label>
                <input type="text" class="form-control" id="amount" name="amount" readonly required value="@Model.withdraw.Amount">
            </div>
            <div class="mb-3">
                <label for="note" class="form-label">Mã giao dịch</label>
                <input type="text" class="form-control" id="" name="trancode"  required>
            </div>
            <button type="submit" class="btn btn-primary">Chuyển Tiền</button>
        </form>
    </div>

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
